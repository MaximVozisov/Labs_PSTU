#include <iostream>
#include <string>
using namespace std;

struct film
{
	int id{};
	string fname;
	string fr;
	int year{};
};

void writefilm(film e, int i)
{
	e.id = i + 1;
	cout << "Введи название фильма: ";
	cin >> e.fname;
	cout << "Режиссер фильма: ";
	cin >> e.fr;
	cout << "Год издания: ";
	cin >> e.year;
}

void tablefilm(film e)
{
	cout << endl << e.id << " | " << e.fname << " | " << e.fr << " | " << e.year << endl;
}

int main()
{
	setlocale(0, "");
	system("chcp 1251");
	system("cls");
	cout << "Введи количестов любимых фильмов: ";
	int n;
	cin >> n;
	film* e = new film [n];
	int i = 0;
	for (; i < n; i++)
	{
		writefilm(e[i], i);
	}
	cout << "id | " << "Название фильма | " << "Сежиссёр фильма | " << "Год издания";
	i = 0;
	for (; i < n; i++)
	{
		tablefilm(e[i]);
	}
	delete[] e;
	return 0;
}
